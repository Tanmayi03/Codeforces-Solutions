#include <iostream>
#include <string>
using namespace std;
 
int main()
{
    int n;
    cin>>n;
    string s[n];
    int f = 0;
    for(int i=0;i<n;i++)
    {
        cin>>s[i];
        if(s[i]=="Tetrahedron")
        {
            f += 4;
        }
        else if(s[i]=="Cube")
        {
            f += 6;
        }
        else if(s[i]=="Octahedron")
        {
           f += 8;
        }
        else if(s[i]=="Dodecahedron")
        {
           f += 12;
        }
        else if(s[i]=="Icosahedron")
        {
            f += 20;
        }
    }
    cout<<f<<endl;
    return 0;
}
